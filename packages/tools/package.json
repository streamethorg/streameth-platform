{
  "name": "av-tools",
  "description": "Tools to manage Web3 events media, streaming, recording and archiving",
  "license": "MIT",
  "version": "0.2.0",
  "scripts": {
    "dev": "remotion studio",
    "build": "remotion render",
    "upgrade": "remotion upgrade",
    "test": "eslint src --ext ts,tsx,js,jsx && tsc",
    "prettier": "prettier './src' --write",
    "remotion": "ts-node ./src/index.ts",
    "tools": "ts-node ./src/tools.ts",
    "server:build": "tsc",
    "server:dev": "nodemon ./src/server.ts",
    "server:start": "node ./dist/server.js",
    "run:process": "ts-node ./src/scripts/process.ts",
    "run:xvfb": "xvfb-run -e /dev/stdout -s '-ac -screen 0 1920x1080x24' ts-node ./src/scripts/process.ts ",
    "run:split": "ts-node ./src/scripts/split.ts",
    "run:join": "ts-node ./src/scripts/join.ts",
    "run:upload": "ts-node ./src/scripts/upload.ts",
    "run:sheets": "ts-node ./src/scripts/sheets.ts",
    "run:slides": "ts-node ./src/scripts/slides.ts",
    "run:render": "ts-node ./src/scripts/render.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src": [
      "lint",
      "prettier"
    ]
  },
  "sideEffects": [
    "*.css"
  ],
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@google-cloud/local-auth": "^2.1.1",
    "@livepeer/react": "^2.5.8",
    "@remotion/bundler": "4.0.37",
    "@remotion/cli": "4.0.37",
    "@remotion/google-fonts": "4.0.37",
    "@remotion/shapes": "4.0.37",
    "@remotion/zod-types": "4.0.37",
    "cross-fetch": "^4.0.0",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "ethereum-blockies-base64": "^1.0.2",
    "express": "^4.18.2",
    "ffmpeg-concat": "^1.3.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "gl": "^6.0.2",
    "google-auth-library": "^9.0.0",
    "googleapis": "^123.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remotion": "4.0.37",
    "slugify": "^1.6.6",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@remotion/cli": "4.0.1",
    "@remotion/eslint-config": "4.0.37",
    "@remotion/tailwind": "4.0.37",
    "@tsconfig/recommended": "^1.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/ffmpeg-concat": "^1.1.2",
    "@types/ffmpeg-static": "^3.0.1",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/node": "^20.5.9",
    "@types/react": "^18.0.26",
    "@types/web": "^0.0.86",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remotion": "4.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.4"
  }
}
